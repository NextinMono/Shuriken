<UserControl x:Class="Shuriken.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shuriken.Views"
             xmlns:vm="clr-namespace:Shuriken.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type vm:AboutViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="About Shuriken" FontSize="32" Padding="5 20" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" FontSize="16" Padding="5 20"><Run Text="Version: "/><Run Text=" "/><Run/><LineBreak/><Run Text="Copyright"/><Run Text=" "/><Run Text="&#xF1F9;"/><Run Text=" "/><Run Text="2022"/><LineBreak/><Run/><LineBreak/><Run Text="[This specific version is a fork of the original project, with Quality of Life changes by NextinHKRY]"/><LineBreak/><Hyperlink Foreground="#FF6D6D6D" TextDecorations="Underline"/></TextBlock>
    </Grid>
</UserControl>
